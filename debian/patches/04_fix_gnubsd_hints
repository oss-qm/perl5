diff -Naur --exclude=debian perl-5.8.4.orig/hints/gnukfreebsd.sh perl-5.8.4/hints/gnukfreebsd.sh
--- perl-5.8.4.orig/hints/gnukfreebsd.sh	1970-01-01 10:00:00.000000000 +1000
+++ perl-5.8.4/hints/gnukfreebsd.sh	2004-11-06 23:36:01.000000000 +1100
@@ -0,0 +1,10 @@
+#! /bin/sh
+
+# Support for Debian GNU/kFreeBSD (kfreebsd-gnu)
+# A port of the Debian GNU system using the FreeBSD kernel.
+
+. ./hints/linux.sh
+
+# Configure sets these where $osname = linux
+ccdlflags='-Wl,-E'
+lddlflags='-shared'

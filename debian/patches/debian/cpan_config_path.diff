index 76cd81e..65a3b27 100644
--- a/cpan/CPAN/lib/CPAN/HandleConfig.pm
+++ b/cpan/CPAN/lib/CPAN/HandleConfig.pm
@@ -543,7 +543,7 @@ sub load {
         $configpm = $INC{"CPAN/MyConfig.pm"};
         $redo++;
